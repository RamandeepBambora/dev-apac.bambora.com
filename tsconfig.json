{
  "compilerOptions": {
    "target"                         : "es5",
    "module"                         : "commonjs",
    "moduleResolution"               : "node",
    "sourceMap"                      : true,
    "emitDecoratorMetadata"          : true,
    "experimentalDecorators"         : true,
    "removeComments"                 : false,
    "noImplicitAny"                  : false,
    "suppressImplicitAnyIndexErrors" : true,
    "isolatedModules"                : false,
    "baseUrl"                        : ".",
    "jsx"                            : "react"
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}